<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include layout="@layout/common_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/tv_chuanyun_yancang_step_kongcang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/step_background_pre"
            android:text="验封" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/arrow_right" />

        <Button
            android:id="@+id/tv_chuanyun_yancang_step_shicang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/step_background"
            android:text="实舱"
            android:textSize="20sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/arrow_right" />

        <Button
            android:id="@+id/tv_chuanyun_yancang_step_fengcang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/step_background"
            android:text="空舱"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="船名："
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_ship_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="恩辉"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal" >

        <RelativeLayout
            android:id="@+id/relativeLayout_chuanyun_shuichidan"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="horizontal" >

            <EditText
                android:id="@+id/et_chaunyun_shuichiliang"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:background="@drawable/et_shuichiliang"
                android:textSize="20sp" >

                <requestFocus />
            </EditText>

            <ImageView
                android:id="@+id/iv_chuanyun_camera_shuichidan"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_below="@+id/iv_chuanyun_shuichidan"
                android:layout_centerHorizontal="true"
                android:background="@drawable/camera" />

            <ImageView
                android:id="@+id/iv_chuanyun_shuichidan"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_below="@+id/et_chaunyun_shuichiliang"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="14dp"
                android:src="@drawable/shuichidan" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/iv_chuanyun_camera3"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="25dp"
                android:background="@drawable/camera" />

            <ImageView
                android:id="@+id/iv_ship"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_below="@+id/iv_chuanyun_camera3"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ship" />

            <ImageView
                android:id="@+id/iv_chuanyun_camera1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_below="@+id/iv_ship"
                android:layout_toLeftOf="@+id/iv_ship"
                android:background="@drawable/camera" />

            <ImageView
                android:id="@+id/iv_chuanyun_camera2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_below="@+id/iv_ship"
                android:layout_toRightOf="@+id/iv_ship"
                android:background="@drawable/camera" />

        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/xunduo_bottom_background"
        android:gravity="bottom|right" >

        <Button
            android:id="@+id/bt_chuanyun_finish"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/button_finish" />
    </LinearLayout>

</LinearLayout>