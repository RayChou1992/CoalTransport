<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include layout="@layout/common_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="车号"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/et_hcjx_chehao"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/iv_hcjx_camera_chexiang"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/camera" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="运单量"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/et_hcjx_yundanliang"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="车节数"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/et_hcjx_chejieshu"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/iv_hcjx_camera_yundan"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/camera" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/iv_hcjx_camera_meizhi"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/camera" />

        <ImageView
            android:id="@+id/iv_hcjx_camera_xiangdi"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/camera" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="倒运"
            android:textSize="20sp" />

        <Button
            android:id="@+id/bt_hcjx_fache"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发车" />

        <Button
            android:id="@+id/bt_hcjx_jieche"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="接车" />
    </LinearLayout>

</LinearLayout>